{
  "name": "votation",
  "version": "1.0.0",
  "description": "Votation system with fastapi and electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.app.votationsystem",
    "productName": "Votation system",
    "directories": {
      "output": "dist"
    },
    "files": [
      "backend/**/*",
      "frontend/**/*",
      "main.js",
      "package.json",
      "backend-fastapi.exe"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
  },
  "devDependencies": {
    "electron-builder": "^22.11.7"
  }
}
